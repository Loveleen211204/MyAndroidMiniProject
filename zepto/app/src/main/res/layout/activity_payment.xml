<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:colorBackground"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Options"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:fontFamily="@font/montserrat_black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_amount_textview"
                android:text="To Pay : â‚¹0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:fontFamily="@font/montserrat_black"
                android:layout_marginTop="30dp"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay by UPI"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:fontFamily="@font/montserrat_black"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginTop="10dp"
                android:background="?android:colorBackground"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_black"
                    android:text="Pay by any UPI App"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?android:colorBackground"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="Pay with GPay"
                            android:onClick="payWithGPay"
                            android:src="@drawable/gpay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/montserrat_black"
                            android:gravity="center"
                            android:text="GPay"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="Pay with PhonePe"
                            android:onClick="payWithPhonePe"
                            android:src="@drawable/phonepe" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/montserrat_black"
                            android:gravity="center"
                            android:text="PhonePe"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="Pay with Paytm"
                            android:onClick="payWithPaytm"
                            android:src="@drawable/paytm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/montserrat_black"
                            android:gravity="center"
                            android:text="Paytm"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_add_upi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="?android:colorBackground"
                    android:fontFamily="@font/montserrat_black"
                    android:text="+ Add new UPI Id"
                    android:textColor="?android:textColorPrimary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_black"
            android:text="Cards"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:padding="10dp"
        android:layout_marginTop="3dp"
        >

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_marginEnd="10dp"
               android:src="@drawable/creditcar"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Credit/Debits Cards"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:fontFamily="@font/montserrat_black"
            />
           <ImageView
               android:layout_width="40dp"
               android:layout_height="24dp"
               app:itemIconTint="?android:textColorPrimary"
               android:src="@drawable/outline_keyboard_arrow_right_24"/>


     </LinearLayout>
    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textColor="?android:textColorPrimary"
            android:fontFamily="@font/montserrat_black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cash On Delivery(COD)"
                    android:textColor="?android:textColorPrimary"
                    android:fontFamily="@font/montserrat_black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    app:itemIconTint="?android:textColorPrimary"
                    android:src="@drawable/outline_keyboard_arrow_right_24"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pluxee"
            android:textColor="?android:textColorPrimary"
            android:fontFamily="@font/montserrat_black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:padding="10dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/pluxee"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pluxee"
                    android:textColor="?android:textColorPrimary"
                    android:fontFamily="@font/montserrat_black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    app:itemIconTint="?android:textColorPrimary"
                    android:src="@drawable/outline_keyboard_arrow_right_24"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>

